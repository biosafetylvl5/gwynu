<!doctype html>
<html>
  <head>
    <title>{{ title }}</title>
    <style>
    body {
        font-family: Verdana, sans-serif;
        height:100%;
        width:100%;
        padding:0;
        margin:0;
    }
    p{
        margin: 0 0;
        padding: 0 0;
    }
    img{
        width: 100%;
        margin: 0 0;
        padding: 0 0;
        display:block;
    }
    h2{
        padding: 10px 0;
        text-align:center;
        font-size: 24px;
        font-family: Garamond, sans-serif;
    }
    .content{
        width:100%;
        margin: 0 auto;
        font-size: 24px;
        font-family: Garamond, sans-serif;
    }
    .keyword {
        font-variant: small-caps;
        font-weight: bold;
    }
    table{
        margin: 0 auto;
    }
    h1{
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: 5%;
    }

    </style>
  </head>
  <body>
    <div class="content">
        {{ contents | safe}}
    </div>
  </body>
</html>
